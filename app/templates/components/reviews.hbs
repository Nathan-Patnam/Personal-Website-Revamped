<div class="col-lg-12">
    {{#each pagedContent as |review|}}
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <h4>
                            <strong>
                                {{review.name}}
                            </strong>
                            <p class="text-secondary text-center">
                                Tutored for
                                {{review.numberTutoringSession}}
                                sesions
                            </p>
                        </h4>
                        <p>
                            <strong>
                                {{review.tagLine}}
                            </strong>
                        </p>
                        <div class="clearfix"></div>
                        <p>
                            {{review.review}}
                        </p>
                        <p>
                            <a
                                class="float-right btn btn-outline-primary ml-2"
                                href={{review.viewLink}}
                                rel="noopener"
                                target="_blank"
                            >
                                <i class="fa fa-reply"></i>
                                View
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    <button type="button" class="btn btn-secondary" {{action 'loadNext'}}>
        View More Reviews
    </button>
</div>