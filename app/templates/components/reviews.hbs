<h1 class="display-4 text-center mt-4">
    Testmonials
</h1>
<div class="row" local-class="review-row">
    {{#each pagedContent as |review|}}
        <div class="col-xl-4 col-lg-6 d-flex align-items-stretch my-2">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-lg-4 col-md-2">
                            <img
                                src={{review.avatarLink}}
                                class="img img-fluid rounded-circle"
                                alt="animated person"
                             />

                            <p class="text-secondary text-center">
                                Tutored for
                                {{review.numberTutoringSession}}
                                sesions
                            </p>
                        </div>
                        <div class="col-xl-9 col-lg-8  col-md-10">
                            <h3>
                                {{review.name}}
                            </h3>
                            <div>
                                <span
                                    class="fa fa-star"
                                    local-class="checked"
                                ></span>
                                <span
                                    class="fa fa-star"
                                    local-class="checked"
                                ></span>
                                <span
                                    class="fa fa-star"
                                    local-class="checked"
                                ></span>
                                <span
                                    class="fa fa-star"
                                    local-class="checked"
                                ></span>
                                <span
                                    class="fa fa-star"
                                    local-class="checked"
                                ></span>
                            </div>
                            <div>
                                {{review.review}}
                            </div>
                            <div class="my-2">
                                <a
                                    class="btn btn-outline-primary"
                                    href={{review.viewLink}}
                                    rel="noopener"
                                    target="_blank"
                                >
                                    <i class="fa fa-reply"></i>
                                    Read Full Review
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<div class="text-center my-4">
    {{#if moreResultsToShow}}
        <button
            type="button"
            class="btn btn-dark btn-lg"
            data-test-view-more-reccomendations
            {{action 'loadNext'}}
        >
            View More Reviews
            {{showedAllResults}}
        </button>
    {{/if}}
</div>